<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip">

    <!-- Left Thumbnail image -->

    <ImageView
            android:id="@+id/img_thumbnail"
            android:contentDescription="@string/thumbnail_description"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>

    <!-- Description -->

    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_thumbnail"
            android:layout_toEndOf="@+id/img_thumbnail"
            android:textColor="#040404"
            android:height="50dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="sans"
            tools:text="This should be a long description like this example that I'm showing."
            android:layout_marginTop="5dp" android:layout_marginStart="10dp"/>

    <!-- Author -->

    <TextView
            android:id="@+id/author"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/description"
            android:layout_below="@+id/description"
            android:layout_marginTop="18dp"
            android:textColor="#343434"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="Author 123" android:layout_marginStart="0dp"/>



    <!-- Time -->

    <TextView
            android:id="@+id/time"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/author"
            android:layout_below="@+id/author"
            android:textColor="#343434"
            android:layout_marginTop="-14dp"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            android:gravity="end"
            tools:text="12 hours ago" android:layout_marginStart="150dp"/>

</RelativeLayout>